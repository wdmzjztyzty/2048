<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f2eada"
    android:id="@+id/Alllayout"
    >

     <LinearLayout 
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="center_horizontal"
        >

         <TextView
             android:id="@+id/scoreLayble2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="私人定制2048 "
             android:textColor="#f15b6c"
             android:textSize="40sp" />
    
    </LinearLayout>
    
     <LinearLayout   
         android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"      
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
         <LinearLayout   
           
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
    <LinearLayout   
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
          <TextView 
            android:id="@+id/scoreLayble"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
        	android:text="当前分:     "
        	android:textColor="#33a3dc"
       
            />
        <TextView 
            android:id="@+id/score"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            />
        
        </LinearLayout>
        
    <LinearLayout   
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/topScoreLable"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     最高分 :  "
            android:textSize="16sp"
            android:textColor="#9933FF"
            />
        <TextView 
            android:id="@+id/topScore"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="27sp"
            android:textColor="#ef4136"
            
            />
        
          </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
      <GridLayout
        android:layout_marginTop="13dp"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FF9933"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="7dp"
        android:clickable="true"
        android:rowCount="4" >

	</GridLayout>
	
      <LinearLayout 
        android:layout_marginTop="15dp"
        android:id="@+id/bottomLayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
		>
       <Button 
           android:layout_weight="1"
           android:id="@+id/resetBut"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="重置"
           /> 
       <Button 
           android:id="@+id/gobackBut"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="撤销"
           /> 
    </LinearLayout>
    
      <RelativeLayout 
          
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
          
          >
      

          <TextView
              android:id="@+id/scoreLayble2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="By Mr.SUN "
              android:layout_alignParentRight="true"
              android:textColor="#3366FF"
              android:textSize="13sp" />
    
   </RelativeLayout>

</LinearLayout>
